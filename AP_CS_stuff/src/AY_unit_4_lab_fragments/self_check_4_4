public class Oops4 {
    public static void main(String[] args) {
        int a = 7;
        int b = 42;
        int small = minimum(a, b);
        if (small == a){
            System.out.println("a is the smallest!");
        }
    }

    public static int minimum(int a, int b) {
        if (a < b) {
            return a;
        } 
        else{
            return b;
        }
        
    }
}